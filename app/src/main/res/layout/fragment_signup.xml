<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_sign_up"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#212432">

        <ImageView
            android:id="@+id/imageViewLogo"
            android:layout_width="231dp"
            android:layout_height="197dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/logoyourbeauty"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tw_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/oregano"
            android:text="@string/signup"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/imageViewLogo" />

        <TableRow
            android:id="@+id/Row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_title">

            <TextView
                android:id="@+id/twName"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/oregano"
                android:text="@string/userName"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/plainName"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:ems="3"
                android:maxLength="50"
                android:inputType="textMultiLine"
                android:textColor="#FFFFFF"
                android:textAlignment="textEnd"
                tools:ignore="Autofill,LabelFor" />

        </TableRow>

        <TableRow
            android:id="@+id/Row2"
            app:layout_constraintTop_toBottomOf="@+id/Row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/twSecondName"
                android:layout_width="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:fontFamily="@font/oregano"
                android:text="@string/userName2"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/plainSecondName"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF"
                android:textAlignment="textEnd"
                android:maxLength="50"
                android:ems="5"
                android:inputType="textMultiLine"
                tools:ignore="Autofill,LabelFor" />

        </TableRow>

        <TableRow
            android:id="@+id/Row3"
            app:layout_constraintTop_toBottomOf="@+id/Row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/twSurname"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/oregano"
                android:text="@string/userSurname"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/plainSurname"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF"
                android:textAlignment="textEnd"
                android:maxLength="50"
                android:ems="4"
                android:inputType="textMultiLine"
                tools:ignore="Autofill,LabelFor" />

        </TableRow>

        <TableRow
            android:id="@+id/Row4"
            app:layout_constraintTop_toBottomOf="@+id/Row3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/twMail"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/oregano"
                android:text="@string/userMail"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/plainMail"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF"
                android:ems="4"
                android:maxLength="50"
                android:inputType="textMultiLine"
                android:textAlignment="textEnd"
                tools:ignore="Autofill,LabelFor" />

        </TableRow>

        <TableRow
            android:id="@+id/Row5"
            app:layout_constraintTop_toBottomOf="@+id/Row4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/twPassword"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/oregano"
                android:text="Password: "
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <EditText
                android:id="@+id/plainPassword"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF"
                android:ems="4"
                android:maxLength="50"
                android:inputType="textMultiLine|textPassword"
                android:textAlignment="textEnd"
                tools:ignore="Autofill,LabelFor" />

        </TableRow>

        <Button
            android:id="@+id/buttonSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="32dp"
            android:backgroundTint="#B8ECF8"
            android:fontFamily="@font/oregano"
            android:text="@string/signup"
            android:textColor="#000000"
            android:textSize="24sp"
            android:layout_gravity="right"/>

    </LinearLayout>
</ScrollView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>